<Application x:Class="SalesforceDebugAnalyzer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:helpers="clr-namespace:SalesforceDebugAnalyzer.Helpers"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="DeepPurple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Theme: Midnight Widow — deep space purple, built for 2AM production incidents -->
            <SolidColorBrush x:Key="BgPrimary" Color="#0D0D16"/>
            <SolidColorBrush x:Key="BgSecondary" Color="#13131E"/>
            <SolidColorBrush x:Key="BgTertiary" Color="#1A1A2A"/>
            <SolidColorBrush x:Key="BgInput" Color="#252538"/>
            <SolidColorBrush x:Key="BgHover" Color="#1E1E35"/>
            <SolidColorBrush x:Key="SidebarBg" Color="#08080F"/>
            <SolidColorBrush x:Key="SidebarBgHover" Color="#16162A"/>
            <SolidColorBrush x:Key="SidebarBorder" Color="#252538"/>
            <SolidColorBrush x:Key="TextPrimary" Color="#E2E2F0"/>
            <SolidColorBrush x:Key="TextSecondary" Color="#B0B0CC"/>
            <SolidColorBrush x:Key="TextMuted" Color="#6E6E8A"/>
            <SolidColorBrush x:Key="TextDisabled" Color="#484860"/>
            <SolidColorBrush x:Key="BorderDefault" Color="#252538"/>
            <SolidColorBrush x:Key="BorderSubtle" Color="#1A1A2A"/>
            <SolidColorBrush x:Key="BorderFocus" Color="#7C6AFF"/>
            <SolidColorBrush x:Key="AccentPrimary" Color="#7C6AFF"/>
            <SolidColorBrush x:Key="AccentHover" Color="#6358D4"/>
            <SolidColorBrush x:Key="AccentActive" Color="#4E46B0"/>
            <SolidColorBrush x:Key="AccentSubtle" Color="#7C6AFF20"/>
            <SolidColorBrush x:Key="Success" Color="#76BA70"/>          <!-- Muted sage-green -->
            <SolidColorBrush x:Key="SuccessSubtle" Color="#76BA7015"/>     <!-- Very subtle wash -->
            <SolidColorBrush x:Key="Warning" Color="#C09040"/>            <!-- Muted warm amber -->
            <SolidColorBrush x:Key="WarningSubtle" Color="#C0904015"/>     <!-- Very subtle wash -->
            <SolidColorBrush x:Key="Danger" Color="#CC6055"/>             <!-- Muted coral-red -->
            <SolidColorBrush x:Key="DangerSubtle" Color="#CC605515"/>      <!-- Very subtle wash -->
            <SolidColorBrush x:Key="Info" Color="#79B8FF"/>
            <SolidColorBrush x:Key="InfoSubtle" Color="#79B8FF20"/>
            
            <!-- Font sizes -->
            <system:Double x:Key="FontBaseline" xmlns:system="clr-namespace:System;assembly=mscorlib">14</system:Double>
            <system:Double x:Key="FontSmall" xmlns:system="clr-namespace:System;assembly=mscorlib">12</system:Double>
            <system:Double x:Key="FontLarge" xmlns:system="clr-namespace:System;assembly=mscorlib">16</system:Double>
            <system:Double x:Key="FontXLarge" xmlns:system="clr-namespace:System;assembly=mscorlib">20</system:Double>
            
            <!-- Spacing -->
            <system:Double x:Key="Space2" xmlns:system="clr-namespace:System;assembly=mscorlib">8</system:Double>
            <system:Double x:Key="Space3" xmlns:system="clr-namespace:System;assembly=mscorlib">12</system:Double>
            <system:Double x:Key="Space4" xmlns:system="clr-namespace:System;assembly=mscorlib">16</system:Double>
            
            <!-- Corner radius -->
            <CornerRadius x:Key="RadiusSmall">4</CornerRadius>
            <CornerRadius x:Key="RadiusMedium">8</CornerRadius>
            
            <!-- Converters -->
            <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <helpers:IntEqualsToVisibilityConverter x:Key="IntEqualsToVisibilityConverter"/>
            <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <helpers:PercentToWidthConverter x:Key="PercentToWidthConverter"/>
            <helpers:PercentToSeverityConverter x:Key="PercentToSeverityConverter"/>
            <helpers:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>
            <helpers:GreaterThanZeroToVisibilityConverter x:Key="GreaterThanZeroToVisibilityConverter"/>
            <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <helpers:InverseNullToVisibilityConverter x:Key="InverseNullToVisibilityConverter"/>
            <helpers:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
            <helpers:MultiBooleanToVisibilityConverter x:Key="MultiBooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
