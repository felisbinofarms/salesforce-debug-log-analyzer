<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- ========================================
         BLACK WIDOW MODERN THEME
         Based on VS Code Dark + Discord Accents
         Research: Seq, Raygun, Better Stack 2024-2026
         ======================================== -->

    <!-- ============ COLOR PALETTE ============ -->
    <!-- MIDNIGHT OPS — Calm, trustworthy, built for 2AM production incidents -->
    <!-- Inspired by GitHub Dark + Linear + the feeling of a steady war room -->

    <!-- Base Backgrounds (deep navy — easier on exhausted eyes than pure black) -->
    <SolidColorBrush x:Key="BgPrimary" Color="#0D1117"/>      <!-- Deepest canvas -->
    <SolidColorBrush x:Key="BgSecondary" Color="#161B22"/>    <!-- Panel surfaces -->
    <SolidColorBrush x:Key="BgTertiary" Color="#21262D"/>     <!-- Elevated cards -->
    <SolidColorBrush x:Key="BgInput" Color="#30363D"/>        <!-- Inputs, hover -->
    <SolidColorBrush x:Key="BgHover" Color="#30363D"/>        <!-- Hover state -->

    <!-- Sidebar (near-black — clean nav separation from content) -->
    <SolidColorBrush x:Key="SidebarBg" Color="#010409"/>
    <SolidColorBrush x:Key="SidebarBgHover" Color="#161B22"/>
    <SolidColorBrush x:Key="SidebarBorder" Color="#21262D"/>

    <!-- Text (warm white hierarchy — readable without eye strain) -->
    <SolidColorBrush x:Key="TextPrimary" Color="#E6EDF3"/>    <!-- Body text -->
    <SolidColorBrush x:Key="TextSecondary" Color="#8B949E"/>  <!-- Supporting text -->
    <SolidColorBrush x:Key="TextMuted" Color="#6E7681"/>      <!-- Timestamps, meta -->
    <SolidColorBrush x:Key="TextDisabled" Color="#484F58"/>   <!-- Disabled -->

    <!-- Borders (whisper-quiet, never fights for attention) -->
    <SolidColorBrush x:Key="BorderDefault" Color="#30363D"/>
    <SolidColorBrush x:Key="BorderSubtle" Color="#21262D"/>
    <SolidColorBrush x:Key="BorderFocus" Color="#58A6FF"/>

    <!-- Accent: Electric Blue — calm, trustworthy, clear leadership -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#58A6FF"/>
    <SolidColorBrush x:Key="AccentHover" Color="#1F6FEB"/>
    <SolidColorBrush x:Key="AccentActive" Color="#1158C7"/>
    <SolidColorBrush x:Key="AccentSubtle" Color="#58A6FF20"/>

    <!-- Semantic Colors: visible but never panic-inducing at 2AM -->
    <SolidColorBrush x:Key="Success" Color="#3FB950"/>        <!-- Emerald -->
    <SolidColorBrush x:Key="SuccessSubtle" Color="#3FB95020"/>
    <SolidColorBrush x:Key="Warning" Color="#D29922"/>        <!-- Warm amber -->
    <SolidColorBrush x:Key="WarningSubtle" Color="#D2992220"/>
    <SolidColorBrush x:Key="Danger" Color="#F85149"/>         <!-- Coral red —  loud enough to notice, not enough to panic -->
    <SolidColorBrush x:Key="DangerSubtle" Color="#F8514920"/>
    <SolidColorBrush x:Key="Info" Color="#79C0FF"/>           <!-- Sky blue -->
    <SolidColorBrush x:Key="InfoSubtle" Color="#79C0FF20"/>

    <!-- Log Level Colors -->
    <SolidColorBrush x:Key="LevelDebug" Color="#6E7681"/>     <!-- Muted gray -->
    <SolidColorBrush x:Key="LevelInfo" Color="#58A6FF"/>      <!-- Blue -->
    <SolidColorBrush x:Key="LevelWarn" Color="#D29922"/>      <!-- Amber -->
    <SolidColorBrush x:Key="LevelError" Color="#F85149"/>     <!-- Coral -->
    <SolidColorBrush x:Key="LevelFatal" Color="#DA3633"/>     <!-- Dark red -->

    <!-- Operation Type Colors (distinct, readable on dark canvas) -->
    <SolidColorBrush x:Key="OperationTrigger" Color="#E05D44"/>    <!-- Salmon/trigger -->
    <SolidColorBrush x:Key="OperationFlow" Color="#58A6FF"/>       <!-- Blue/flow -->
    <SolidColorBrush x:Key="OperationLWC" Color="#3FB950"/>        <!-- Green/LWC -->
    <SolidColorBrush x:Key="OperationAsync" Color="#BC8EDA"/>      <!-- Soft purple/async -->
    <SolidColorBrush x:Key="OperationIntegration" Color="#D29922"/> <!-- Amber/callout -->
    <SolidColorBrush x:Key="OperationValidation" Color="#E3B341"/> <!-- Gold/validation -->
    
    <!-- ============ SPACING SCALE ============ -->
    <sys:Double x:Key="Space1">4</sys:Double>
    <sys:Double x:Key="Space2">8</sys:Double>
    <sys:Double x:Key="Space3">12</sys:Double>
    <sys:Double x:Key="Space4">16</sys:Double>
    <sys:Double x:Key="Space5">20</sys:Double>
    <sys:Double x:Key="Space6">24</sys:Double>
    <sys:Double x:Key="Space8">32</sys:Double>
    <sys:Double x:Key="Space10">40</sys:Double>
    <sys:Double x:Key="Space12">48</sys:Double>
    
    <!-- ============ CORNER RADIUS ============ -->
    <CornerRadius x:Key="RadiusSmall">4</CornerRadius>
    <CornerRadius x:Key="RadiusMedium">8</CornerRadius>
    <CornerRadius x:Key="RadiusLarge">12</CornerRadius>
    <CornerRadius x:Key="RadiusXLarge">16</CornerRadius>
    <CornerRadius x:Key="RadiusPill">999</CornerRadius>
    
    <!-- ============ SHADOW EFFECTS ============ -->
    <DropShadowEffect x:Key="ShadowSmall" 
                      BlurRadius="8" 
                      Opacity="0.3" 
                      ShadowDepth="2"
                      Color="#000000"/>
    
    <DropShadowEffect x:Key="ShadowMedium" 
                      BlurRadius="16" 
                      Opacity="0.4" 
                      ShadowDepth="4"
                      Color="#000000"/>
    
    <DropShadowEffect x:Key="ShadowLarge" 
                      BlurRadius="24" 
                      Opacity="0.5" 
                      ShadowDepth="8"
                      Color="#000000"/>
    
    <!-- ============ TYPOGRAPHY SCALE ============ -->
    <FontFamily x:Key="FontPrimary">Segoe UI, Arial</FontFamily>
    <FontFamily x:Key="FontMono">Cascadia Code, Consolas, Courier New</FontFamily>
    
    <sys:Double x:Key="FontSizeXS">11</sys:Double>      <!-- Metadata, captions -->
    <sys:Double x:Key="FontSizeSM">13</sys:Double>      <!-- Secondary text -->
    <sys:Double x:Key="FontBaseline">14</sys:Double>    <!-- Body text -->
    <sys:Double x:Key="FontSizeMD">16</sys:Double>      <!-- Emphasis -->
    <sys:Double x:Key="FontSizeLG">20</sys:Double>      <!-- H3 -->
    <sys:Double x:Key="FontSizeXL">24</sys:Double>      <!-- H2 -->
    <sys:Double x:Key="FontSize2XL">32</sys:Double>     <!-- H1 -->
    
    <FontWeight x:Key="WeightNormal">400</FontWeight>
    <FontWeight x:Key="WeightMedium">500</FontWeight>
    <FontWeight x:Key="WeightSemiBold">600</FontWeight>
    <FontWeight x:Key="WeightBold">700</FontWeight>
    
    <!-- ============ ANIMATION TIMINGS ============ -->
    <Duration x:Key="DurationInstant">0:0:0.05</Duration>     <!-- <50ms -->
    <Duration x:Key="DurationFast">0:0:0.1</Duration>         <!-- 100ms -->
    <Duration x:Key="DurationStandard">0:0:0.17</Duration>    <!-- 170ms (Discord) -->
    <Duration x:Key="DurationSlow">0:0:0.3</Duration>         <!-- 300ms -->
    
    <!-- Easing Functions -->
    <QuadraticEase x:Key="EaseOut" EasingMode="EaseOut"/>
    <CubicEase x:Key="EaseInOut" EasingMode="EaseInOut"/>
    <ExponentialEase x:Key="EaseOutExpo" Exponent="5" EasingMode="EaseOut"/>
    
    <!-- ============ COMPONENT STYLES ============ -->
    
    <!-- Modern Card Style -->
    <Style x:Key="ModernCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BgSecondary}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtle}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="{StaticResource Space4}"/>
        <Setter Property="Effect" Value="{StaticResource ShadowSmall}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource ShadowMedium}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Elevated Card (hover state) -->
    <Style x:Key="ElevatedCard" TargetType="Border" BasedOn="{StaticResource ModernCard}">
        <Setter Property="Background" Value="{StaticResource BgTertiary}"/>
        <Setter Property="Effect" Value="{StaticResource ShadowMedium}"/>
    </Style>
    
    <!-- Log Card Style (auto-height, left color gutter) -->
    <Style x:Key="LogCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BgSecondary}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusMedium}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderSubtle}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
        <Setter Property="Padding" Value="12,10,14,10"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BgHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Button Styles -->
    
    <!-- Primary Button (Discord Blurple) -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="{StaticResource FontBaseline}"/>
        <Setter Property="FontWeight" Value="{StaticResource WeightSemiBold}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="{StaticResource RadiusSmall}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentActive}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Secondary Button -->
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BgInput}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontSize" Value="{StaticResource FontBaseline}"/>
        <Setter Property="FontWeight" Value="{StaticResource WeightSemiBold}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="{StaticResource RadiusSmall}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BgHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Ghost Button (transparent) -->
    <Style x:Key="GhostButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="{StaticResource FontBaseline}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="{StaticResource RadiusSmall}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BgHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Pill Button (for filters) -->
    <Style x:Key="PillButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentSubtle}"/>
        <Setter Property="Foreground" Value="{StaticResource AccentPrimary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource AccentPrimary}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSM}"/>
        <Setter Property="FontWeight" Value="{StaticResource WeightMedium}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource RadiusPill}"
                            Padding="{TemplateBinding Padding}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <ContentPresenter VerticalAlignment="Center"/>
                            <!-- X button will be added in usage -->
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Icon Button (sidebar icons) -->
    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="{StaticResource RadiusMedium}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource SidebarBgHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Badge Styles -->
    <Style x:Key="Badge" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BgInput}"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusPill}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
    
    <Style x:Key="SuccessBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource SuccessSubtle}"/>
    </Style>
    
    <Style x:Key="WarningBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource WarningSubtle}"/>
    </Style>
    
    <Style x:Key="DangerBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="Background" Value="{StaticResource DangerSubtle}"/>
    </Style>
    
    <!-- Input Styles -->
    <Style x:Key="ModernTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource BgInput}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="{StaticResource FontBaseline}"/>
        <Setter Property="CaretBrush" Value="{StaticResource TextPrimary}"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource BorderFocus}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Skeleton Loader (replaces spinner) -->
    <Style x:Key="SkeletonLoader" TargetType="Rectangle">
        <Setter Property="Fill" Value="{StaticResource BgInput}"/>
        <Setter Property="RadiusX" Value="4"/>
        <Setter Property="RadiusY" Value="4"/>
        <Setter Property="Opacity" Value="0.5"/>
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever">
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                         From="0.3" To="0.7" Duration="0:0:1"
                                         AutoReverse="True"
                                         EasingFunction="{StaticResource EaseInOut}"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>
    
</ResourceDictionary>
