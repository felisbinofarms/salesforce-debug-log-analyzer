<Window x:Class="SalesforceDebugAnalyzer.Views.ConnectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Connect to Salesforce" 
        Height="450" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        TextElement.Foreground="{StaticResource TextPrimary}"
        Background="{StaticResource BgSecondary}"
        FontFamily="Segoe UI"
        TextElement.FontSize="{StaticResource FontBaseline}">
    
    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="DiscordPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentPrimary}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="{StaticResource Space4}"/>
            <Setter Property="FontSize" Value="{StaticResource FontBaseline}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="DiscordSecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BgTertiary}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="{StaticResource Space4}"/>
            <Setter Property="FontSize" Value="{StaticResource FontBaseline}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Connect to Salesforce" FontSize="24" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBlock Text="Choose how you want to authenticate" 
                       FontSize="{StaticResource FontBaseline}" 
                       Foreground="{StaticResource TextSecondary}"/>
        </StackPanel>

        <!-- Connection Options -->
        <TabControl Grid.Row="1" Margin="0,0,0,16">
            <!-- OAuth Tab -->
            <TabItem Header="OAuth (Browser Login)">
                <StackPanel Margin="16">
                    <TextBlock Text="OAuth 2.0 Authentication" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,16">
                        This will open your browser to login. You need to create a Connected App first.
                    </TextBlock>
                    
                    <CheckBox x:Name="UseSandboxCheckBox" 
                              Content="Use Sandbox (test.salesforce.com)" 
                              IsChecked="True"
                              Margin="0,0,0,16"/>
                    
                    <Expander Header="ℹ️ How does this work?" Margin="0,0,0,16">
                        <StackPanel Margin="16,8">
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,8">
                                <Bold>Black Widow connects securely to your Salesforce org:</Bold>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="8,0,0,4">
                                1. Click "Login with Browser" below
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="8,0,0,4">
                                2. Your browser will open Salesforce's login page
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="8,0,0,4">
                                3. Log in and approve access for Black Widow
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="8,0,0,8">
                                4. You'll be redirected back — that's it!
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,0" FontSize="{StaticResource FontSmall}" Foreground="{StaticResource TextMuted}">
                                Your credentials are never stored by Black Widow. We use Salesforce's secure OAuth 2.0 flow.
                            </TextBlock>
                        </StackPanel>
                    </Expander>

                    <Button x:Name="OAuthLoginButton" 
                            Content="Login with Browser" 
                            Style="{StaticResource DiscordPrimaryButton}"
                            Click="OAuthLoginButton_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Manual Token Tab -->
            <TabItem Header="Manual Token (Quick Start)">
                <StackPanel Margin="16">
                    <TextBlock Text="Manual Access Token" FontWeight="SemiBold" Margin="0,0,0,8"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,16">
                        Use an access token from Salesforce CLI or Workbench for quick testing.
                    </TextBlock>

                    <TextBlock Text="Instance URL" Margin="0,0,0,4"/>
                    <TextBox x:Name="InstanceUrlTextBox" 
                             materialDesign:HintAssist.Hint="https://your-instance.salesforce.com"
                             Margin="0,0,0,16"/>

                    <TextBlock Text="Access Token" Margin="0,0,0,4"/>
                    <TextBox x:Name="AccessTokenTextBox" 
                             materialDesign:HintAssist.Hint="00D..."
                             Margin="0,0,0,16"/>

                    <Expander Header="How to get an access token?" Margin="0,0,0,16">
                        <StackPanel Margin="16,8">
                            <TextBlock TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,8">
                                Option 1: Salesforce CLI
                            </TextBlock>
                            <Border Background="{StaticResource BgPrimary}" Padding="8" Margin="0,0,0,8" CornerRadius="4">
                                <TextBlock Text="sf org display --target-org yourOrg" 
                                          Foreground="White" 
                                          FontFamily="Consolas"/>
                            </Border>
                            
                            <TextBlock TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,8,0,8">
                                Option 2: Workbench
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,4">
                                1. Login to workbench.developerforce.com
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,4">
                                2. Look in browser cookies for 'sid' value
                            </TextBlock>
                        </StackPanel>
                    </Expander>

                    <Button x:Name="ManualConnectButton" 
                            Content="Connect with Token" 
                            Style="{StaticResource DiscordPrimaryButton}"
                            Click="ManualConnectButton_Click"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Status and Buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="StatusTextBlock" 
                       Text="Ready to connect" 
                       VerticalAlignment="Center"
                       Foreground="{StaticResource TextSecondary}"/>

            <Button Grid.Column="1" 
                    Content="Cancel" 
                    Style="{StaticResource DiscordSecondaryButton}"
                    Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</Window>
