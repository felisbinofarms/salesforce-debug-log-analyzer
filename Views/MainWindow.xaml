<Window x:Class="SalesforceDebugAnalyzer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:helpers="clr-namespace:SalesforceDebugAnalyzer.Helpers"
        mc:Ignorable="d"
        Title="Salesforce Debug Log Analyzer" 
        Height="600" 
        Width="1000"
        MinHeight="400"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Window.Resources>
        <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <materialDesign:ColorZone Mode="PrimaryMid" Padding="16" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <materialDesign:PackIcon Kind="CloudSearch" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Salesforce Debug Log Analyzer" FontSize="22" VerticalAlignment="Center" FontWeight="Medium"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Button Content="Manage Debug Logs" 
                            Command="{Binding ManageDebugLogsCommand}"
                            Foreground="White"
                            Margin="8,0"/>
                    <Button Content="Upload Log" 
                            Command="{Binding UploadLogCommand}"
                            Foreground="White"
                            Margin="8,0"/>
                    <Button Content="Disconnect" 
                            Command="{Binding DisconnectCommand}"
                            Foreground="White"
                            Margin="8,0"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <!-- Connections View (when not connected) -->
            <ContentControl x:Name="ConnectionsViewContainer" Visibility="Visible"/>
            
            <!-- Main Analysis View (when connected) -->
            <Grid x:Name="MainContentGrid" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar - Log List & Filters -->
            <Grid Grid.Column="0" Background="{DynamicResource MaterialDesignCardBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Debug Logs" FontSize="16" FontWeight="SemiBold" Margin="16,16,16,8" Grid.Row="0"/>
                
                <ListBox Grid.Row="1" Margin="8">
                    <ListBoxItem Content="Log - 2026-01-29 10:23:45"/>
                    <ListBoxItem Content="Log - 2026-01-29 09:15:32"/>
                    <ListBoxItem Content="Log - 2026-01-28 16:42:11"/>
                </ListBox>

                <Expander Header="Filters" Grid.Row="2" Margin="8" IsExpanded="True">
                    <StackPanel Margin="8">
                        <CheckBox Content="SOQL Queries" IsChecked="True" Margin="0,4"/>
                        <CheckBox Content="DML Operations" IsChecked="True" Margin="0,4"/>
                        <CheckBox Content="Errors" IsChecked="True" Margin="0,4"/>
                        <CheckBox Content="Debug Statements" IsChecked="False" Margin="0,4"/>
                        <CheckBox Content="System Methods" IsChecked="False" Margin="0,4"/>
                    </StackPanel>
                </Expander>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- Right Content Area - Tabs -->
            <TabControl Grid.Column="2" Margin="8">
                <!-- Summary Tab - FIRST and most prominent -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileDocumentOutline" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Plain English Summary" FontWeight="SemiBold"/>
                        </StackPanel>
                    </TabItem.Header>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16">
                        <StackPanel>
                            <!-- Summary Section -->
                            <materialDesign:Card Padding="16" Margin="0,0,0,16" materialDesign:ElevationAssist.Elevation="Dp2">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <materialDesign:PackIcon Kind="InformationOutline" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="What Happened" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding SummaryText}" 
                                               TextWrapping="Wrap" 
                                               FontSize="14" 
                                               LineHeight="22"
                                               Foreground="{DynamicResource MaterialDesignBody}"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Issues Section -->
                            <materialDesign:Card Padding="16" Margin="0,0,0,16" materialDesign:ElevationAssist.Elevation="Dp2">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <materialDesign:PackIcon Kind="AlertCircleOutline" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#FF9800"/>
                                        <TextBlock Text="Issues Detected" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <ItemsControl ItemsSource="{Binding Issues}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                        BorderThickness="0,0,0,1" 
                                                        Padding="0,8" 
                                                        Margin="0,0,0,8">
                                                    <TextBlock Text="{Binding}" 
                                                               TextWrapping="Wrap" 
                                                               FontSize="14" 
                                                               LineHeight="22"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Recommendations Section -->
                            <materialDesign:Card Padding="16" materialDesign:ElevationAssist.Elevation="Dp2">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <materialDesign:PackIcon Kind="Lightbulb" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="#4CAF50"/>
                                        <TextBlock Text="Recommendations" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <ItemsControl ItemsSource="{Binding Recommendations}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                        BorderThickness="0,0,0,1" 
                                                        Padding="0,8" 
                                                        Margin="0,0,0,8">
                                                    <TextBlock Text="{Binding}" 
                                                               TextWrapping="Wrap" 
                                                               FontSize="14" 
                                                               LineHeight="22"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </materialDesign:Card>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                
                <TabItem Header="Execution Tree">
                    <Grid>
                        <TextBlock Text="Execution tree view will be displayed here" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   FontSize="16" 
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Timeline">
                    <Grid>
                        <TextBlock Text="Timeline/Gantt chart view will be displayed here" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   FontSize="16" 
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Database Operations">
                    <Grid>
                        <TextBlock Text="SOQL/DML operations grid will be displayed here" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   FontSize="16" 
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Performance">
                    <Grid>
                        <TextBlock Text="Performance dashboard and charts will be displayed here" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   FontSize="16" 
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Raw Log">
                    <Grid>
                        <TextBlock Text="Raw log viewer with syntax highlighting will be displayed here" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   FontSize="16" 
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </Grid>
                </TabItem>
            </TabControl>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <materialDesign:ColorZone Mode="PrimaryLight" Padding="8" Grid.Row="2">
            <DockPanel>
                <ProgressBar IsIndeterminate="True" 
                             Width="100" 
                             Height="4"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Margin="8,0"
                             DockPanel.Dock="Left"/>
                <TextBlock Text="{Binding StatusMessage}" 
                           VerticalAlignment="Center" 
                           Margin="8,0"/>
                <TextBlock Text="{Binding ConnectionStatus}" 
                           DockPanel.Dock="Right" 
                           VerticalAlignment="Center" 
                           Margin="8,0"/>
            </DockPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>
