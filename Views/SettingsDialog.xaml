<Window x:Class="SalesforceDebugAnalyzer.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Settings" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgTertiary}"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style TargetType="CheckBox" x:Key="SettingCheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style TargetType="ComboBox" x:Key="SettingComboBox">
            <Setter Property="Background" Value="{StaticResource BgInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSubtle}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <Style TargetType="TextBox" x:Key="SettingTextBox">
            <Setter Property="Background" Value="{StaticResource BgInput}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSubtle}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Height" Value="32"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" Background="{StaticResource BgSecondary}" BorderBrush="{StaticResource BorderSubtle}" BorderThickness="0,0,1,0">
                <StackPanel Margin="10">
                    <Button x:Name="GeneralTabButton" 
                            Content="General" 
                            Click="GeneralTabButton_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="{StaticResource TextPrimary}"
                            FontSize="14"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"
                            Margin="0,5"/>

                    <Button x:Name="ConnectionsTabButton" 
                            Content="Connections" 
                            Click="ConnectionsTabButton_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="{StaticResource TextPrimary}"
                            FontSize="14"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"
                            Margin="0,5"/>

                    <Button x:Name="ParserTabButton" 
                            Content="Parser" 
                            Click="ParserTabButton_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="{StaticResource TextPrimary}"
                            FontSize="14"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"
                            Margin="0,5"/>

                    <Button x:Name="PrivacyTabButton" 
                            Content="Privacy" 
                            Click="PrivacyTabButton_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="{StaticResource TextPrimary}"
                            FontSize="14"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"
                            Margin="0,5"/>

                    <Button x:Name="AdvancedTabButton" 
                            Content="Advanced" 
                            Click="AdvancedTabButton_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="{StaticResource TextPrimary}"
                            FontSize="14"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"
                            Margin="0,5"/>

                    <Button x:Name="AboutTabButton" 
                            Content="About" 
                            Click="AboutTabButton_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="{StaticResource TextPrimary}"
                            FontSize="14"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Left"
                            Padding="15,10"
                            Margin="0,5"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ContentPanel" Margin="30">
                    <!-- Content will be dynamically loaded based on tab selection -->
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Bottom Buttons -->
        <Border Grid.Row="1" Background="{StaticResource BgSecondary}" BorderBrush="{StaticResource BorderDefault}" BorderThickness="0,1,0,0" Padding="20">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Reset to Defaults" 
                            Click="ResetButton_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="{StaticResource Danger}"
                            FontSize="13"
                            Padding="15,8"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Cancel" 
                            Click="CancelButton_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="{StaticResource TextSecondary}"
                            FontSize="13"
                            Margin="0,0,10,0"
                            Padding="15,8"/>

                    <Button Content="Save" 
                            Click="SaveButton_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="{StaticResource AccentPrimary}"
                            Foreground="{StaticResource TextPrimary}"
                            FontSize="13"
                            Padding="20,8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
