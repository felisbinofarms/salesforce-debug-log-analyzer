<Window x:Class="SalesforceDebugAnalyzer.Views.OAuthBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Login to Salesforce" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Mode="PrimaryMid" Padding="16" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Login" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Salesforce OAuth Login" FontSize="18" VerticalAlignment="Center" FontWeight="Medium"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- WebView2 Browser -->
        <wv2:WebView2 x:Name="WebBrowser" Grid.Row="1"/>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource MaterialDesignDivider}" Padding="16,8">
            <Grid>
                <TextBlock x:Name="StatusText" Text="Loading..." VerticalAlignment="Center"/>
                <Button Content="Cancel" 
                        Click="CancelButton_Click"
                        HorizontalAlignment="Right"
                        Style="{StaticResource MaterialDesignFlatButton}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
