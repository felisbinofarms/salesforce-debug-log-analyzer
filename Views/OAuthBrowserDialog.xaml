<Window x:Class="SalesforceDebugAnalyzer.Views.OAuthBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Login to Salesforce" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgTertiary}">
    
    <Window.Resources>
        <Style x:Key="DiscordSecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BgInput}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource AccentPrimary}" Padding="16">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ”‘" FontSize="24" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Salesforce OAuth Login" FontSize="18" VerticalAlignment="Center" FontWeight="Medium" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- WebView2 Browser -->
        <wv2:WebView2 x:Name="WebBrowser" Grid.Row="1"/>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource BgSecondary}" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="StatusText" Text="Loading..." VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" Grid.Column="0"/>
                <Button Content="Open in Browser" 
                        Click="OpenInBrowser_Click"
                        Margin="0,0,8,0"
                        Grid.Column="1"
                        Style="{StaticResource DiscordSecondaryButton}"
                        ToolTip="If the embedded browser isn't working, try opening in your default browser"/>
                <Button Content="Cancel" 
                        Click="CancelButton_Click"
                        Grid.Column="2"
                        Style="{StaticResource DiscordSecondaryButton}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
