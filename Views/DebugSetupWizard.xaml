<UserControl x:Class="SalesforceDebugAnalyzer.Views.DebugSetupWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{StaticResource TextPrimary}"
        Background="{StaticResource BgTertiary}"
        FontFamily="Segoe UI, Arial">
    
    <UserControl.Resources>
        <!-- Discord-themed RadioButton Style -->
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Ellipse x:Name="Circle" Width="20" Height="20" Stroke="{StaticResource AccentPrimary}" StrokeThickness="2" Fill="Transparent" Margin="0,0,12,0"/>
                            <Ellipse x:Name="InnerCircle" Width="10" Height="10" Fill="{StaticResource AccentPrimary}" Visibility="Collapsed" Margin="0,0,12,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <ContentPresenter Grid.Column="1" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="InnerCircle" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="Circle" Property="Fill" Value="{StaticResource AccentPrimary}"/>
                                <Setter TargetName="Circle" Property="Opacity" Value="0.2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Circle" Property="Stroke" Value="{StaticResource AccentHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Discord-themed ComboBox Style -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource BgHover}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderDefault}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Wizard Steps Sidebar -->
        <Border Grid.Column="0" Background="{StaticResource BgTertiary}" Padding="24" BorderBrush="{StaticResource BorderDefault}" BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="Setup Steps" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,24"/>
                
                <!-- Step 1 -->
                <Border x:Name="Step1Border" Background="{StaticResource AccentPrimary}" Padding="16" CornerRadius="4" Margin="0,0,0,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <materialDesign:PackIcon Kind="Numeric1Circle" Foreground="White" Margin="0,0,8,0"/>
                            <TextBlock Text="Who to Debug" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock Text="Choose which user" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Step 2 -->
                <Border x:Name="Step2Border" Background="Transparent" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1" Padding="16" CornerRadius="4" Margin="0,0,0,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <materialDesign:PackIcon Kind="Numeric2Circle" Foreground="White" Margin="0,0,8,0"/>
                            <TextBlock Text="Detail Level" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock Text="How much to log" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Step 3 -->
                <Border x:Name="Step3Border" Background="Transparent" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1" Padding="16" CornerRadius="4" Margin="0,0,0,12">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <materialDesign:PackIcon Kind="Numeric3Circle" Foreground="White" Margin="0,0,8,0"/>
                            <TextBlock Text="Duration" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock Text="How long to log" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Step 4 -->
                <Border x:Name="Step4Border" Background="Transparent" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1" Padding="16" CornerRadius="4">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                            <materialDesign:PackIcon Kind="Numeric4Circle" Foreground="White" Margin="0,0,8,0"/>
                            <TextBlock Text="Enable &amp; Download" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock Text="Start logging" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="32">
                <!-- Step 1: Choose User -->
                <StackPanel x:Name="Step1Panel">
                    <TextBlock Text="Step 1 of 4" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,4"/>
                    <TextBlock Text="Step 1: Who Do You Want to Debug?" FontSize="24" FontWeight="Bold" Margin="0,0,0,16"/>
                    
                    <Border Padding="24" Margin="0,0,0,16" Background="{StaticResource BgSecondary}" BorderBrush="{StaticResource AccentPrimary}" BorderThickness="2" CornerRadius="8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="InformationOutline" Width="20" Height="20" Margin="0,0,8,0" Foreground="{StaticResource AccentPrimary}"/>
                                <TextBlock Text="What is debug logging?" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                            <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}">
                                Debug logging records everything that happens when someone uses Salesforce - like clicking buttons, saving records, or running workflows.
                                This helps you understand what your code is doing and find problems.
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Padding="24" Margin="0,0,0,24" Background="{StaticResource BgSecondary}" CornerRadius="12" BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="White" Opacity="0.1"/>
                        </Border.BorderBrush>
                        <StackPanel>
                            <TextBlock Text="Select a user to enable debug logging for:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,16" Foreground="{StaticResource TextPrimary}"/>
                            
                            <!-- Current User Option -->
                            <RadioButton x:Name="CurrentUserRadio" GroupName="UserSelection" IsChecked="True" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="Myself (Current User)" FontWeight="SemiBold" FontSize="15"/>
                                    <TextBlock x:Name="CurrentUserInfo" 
                                               Text="Loading..." 
                                               Foreground="{StaticResource TextSecondary}"
                                               Margin="0,4,0,0"/>
                                    <TextBlock Text="✓ Best for troubleshooting your own actions" 
                                               Foreground="Green" 
                                               FontSize="12"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </RadioButton>

                            <!-- Another User Option -->
                            <RadioButton x:Name="AnotherUserRadio" GroupName="UserSelection" Margin="0,0,0,8">
                                <StackPanel>
                                    <TextBlock Text="Another User" FontWeight="SemiBold" FontSize="15" Foreground="{StaticResource TextPrimary}"/>
                                    <TextBlock Text="Debug someone else's actions (requires their User ID)" 
                                               Foreground="{StaticResource TextSecondary}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>
                            </RadioButton>

                            <!-- User ID Input (shown when AnotherUserRadio is checked) -->
                            <StackPanel x:Name="UserIdPanel" Visibility="Collapsed" Margin="32,8,0,0">
                                <TextBlock Text="User ID:" Margin="0,0,0,4"/>
                                <TextBox x:Name="UserIdTextBox" 
                                         Margin="0,0,0,8"
                                         Background="{StaticResource BgSecondary}"
                                         Foreground="{StaticResource TextPrimary}"
                                         BorderBrush="{StaticResource BorderDefault}"/>
                                <TextBlock Text="💡 Tip: Find this in Setup > Users > Click on user > View their User ID" 
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondary}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <Button Content="Next: Choose Detail Level →" 
                                    HorizontalAlignment="Right"
                                    Margin="0,24,0,0"
                                    Click="NextToStep2_Click"
                                    Background="{StaticResource AccentPrimary}"
                                    Foreground="White"
                                    Padding="24,12"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Step 2: Debug Level -->
                <StackPanel x:Name="Step2Panel" Visibility="Collapsed">
                    <TextBlock Text="Step 2 of 4" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,4"/>
                    <TextBlock Text="Step 2: How Much Detail Do You Need?" FontSize="24" FontWeight="Bold" Margin="0,0,0,16"/>
                    
                    <Border Padding="24" Margin="0,0,0,16" Background="{StaticResource BgSecondary}" BorderBrush="{StaticResource Warning}" BorderThickness="2" CornerRadius="8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="Alert" Width="20" Height="20" Margin="0,0,8,0" Foreground="{StaticResource Warning}"/>
                                <TextBlock Text="Why does this matter?" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                            <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}">
                                More detail = bigger log files. Logs are limited to 20MB, so too much detail might cause important information to be cut off.
                                Start with "Standard" for most troubleshooting.
                            </TextBlock>
                            <TextBlock Margin="0,8,0,0" FontSize="12">
                                <Hyperlink NavigateUri="https://help.salesforce.com/s/articleView?id=sf.code_setting_debug_log_levels.htm" RequestNavigate="Hyperlink_RequestNavigate" Foreground="{StaticResource AccentPrimary}">
                                    ? Learn about Debug Levels in Salesforce Help
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Padding="24" Margin="0,0,0,24" Background="{StaticResource BgSecondary}" CornerRadius="12" BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="White" Opacity="0.1"/>
                        </Border.BorderBrush>
                        <StackPanel>
                            <!-- Preset Options -->
                            <StackPanel x:Name="PresetLevelsPanel">
                                <RadioButton x:Name="StandardLevelRadio" GroupName="DebugLevel" IsChecked="True" Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="✓ Standard (Recommended)" FontWeight="SemiBold" FontSize="16" Foreground="{StaticResource TextPrimary}"/>
                                        <TextBlock Text="Good balance of detail. Shows errors, warnings, and important events."
                                                   TextWrapping="Wrap"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   Margin="0,4,0,0"/>
                                        <TextBlock Text="Example: SOQL counts, exceptions, trigger/flow names, callout details"
                                                   FontSize="12" FontStyle="Italic"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </RadioButton>

                                <RadioButton x:Name="DetailedLevelRadio" GroupName="DebugLevel" Margin="0,0,0,20">
                                    <StackPanel>
                                        <TextBlock Text="Detailed" FontWeight="SemiBold" FontSize="16" Foreground="{StaticResource TextPrimary}"/>
                                        <TextBlock Text="More information including database queries and code execution flow."
                                                   TextWrapping="Wrap"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   Margin="0,4,0,0"/>
                                        <TextBlock Text="Example: every method call, line-by-line variable values, heap allocations"
                                                   FontSize="12" FontStyle="Italic"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   Margin="0,4,0,0"/>
                                        <TextBlock Text="⚠️ Log files will be 10–50x larger. Only use when debugging a specific problem."
                                                   TextWrapping="Wrap"
                                                   FontSize="12"
                                                   Foreground="{StaticResource Warning}"
                                                   Margin="0,6,0,0"/>
                                    </StackPanel>
                                </RadioButton>

                                <RadioButton x:Name="CustomLevelRadio" GroupName="DebugLevel">
                                    <StackPanel>
                                        <TextBlock Text="Custom (Advanced)" FontWeight="SemiBold" FontSize="16" Foreground="{StaticResource TextPrimary}"/>
                                        <TextBlock Text="Choose an existing debug level or create your own" 
                                                   TextWrapping="Wrap"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </RadioButton>
                            </StackPanel>

                            <!-- Custom Debug Level Selection -->
                            <StackPanel x:Name="CustomLevelPanel" Visibility="Collapsed" Margin="0,16,0,0">
                                <ComboBox x:Name="DebugLevelComboBox" 
                                          DisplayMemberPath="MasterLabel"
                                          Margin="0,0,0,8"
                                          Background="{StaticResource BgSecondary}"
                                          Foreground="{StaticResource TextPrimary}"
                                          BorderBrush="{StaticResource BorderDefault}"/>
                                <Button Content="Create New Debug Level" 
                                        Click="CreateDebugLevel_Click"
                                        HorizontalAlignment="Left"
                                        Background="Transparent"
                                        Foreground="{StaticResource AccentPrimary}"
                                        BorderBrush="{StaticResource AccentPrimary}"
                                        BorderThickness="1"
                                        Padding="20,10"
                                        Cursor="Hand"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                                <Button Content="← Back" 
                                        Click="BackToStep1_Click"
                                        Margin="0,0,8,0"
                                        Background="Transparent"
                                        Foreground="{StaticResource TextSecondary}"
                                        BorderBrush="{StaticResource BorderDefault}"
                                        BorderThickness="1"
                                        Padding="20,10"
                                        Cursor="Hand"/>
                                <Button Content="Next: Set Duration →" 
                                        Click="NextToStep3_Click"
                                        Background="{StaticResource AccentPrimary}"
                                        Foreground="White"
                                        Padding="24,12"
                                        FontWeight="SemiBold"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Step 3: Duration -->
                <StackPanel x:Name="Step3Panel" Visibility="Collapsed">
                    <TextBlock Text="Step 3 of 4" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,4"/>
                    <TextBlock Text="Step 3: How Long Should Logging Stay Active?" FontSize="24" FontWeight="Bold" Margin="0,0,0,16"/>
                    
                    <Border Padding="24" Margin="0,0,0,16" Background="{StaticResource BgSecondary}" BorderBrush="{StaticResource Success}" BorderThickness="2" CornerRadius="8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="ClockOutline" Width="20" Height="20" Margin="0,0,8,0" Foreground="{StaticResource Success}"/>
                                <TextBlock Text="Why set a time limit?" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                            <TextBlock TextWrapping="Wrap" Foreground="{StaticResource TextSecondary}">
                                Debug logs take up space and can slow things down slightly. After the time expires, logging automatically stops.
                                You can always turn it back on later!
                            </TextBlock>
                            <TextBlock Margin="0,8,0,0" FontSize="12">
                                <Hyperlink NavigateUri="https://help.salesforce.com/s/articleView?id=sf.code_trace_flag.htm" RequestNavigate="Hyperlink_RequestNavigate" Foreground="{StaticResource AccentPrimary}">
                                    ? Learn about Trace Flags in Salesforce Help
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Padding="24" Margin="0,0,0,24" Background="{StaticResource BgSecondary}" CornerRadius="12" BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="White" Opacity="0.1"/>
                        </Border.BorderBrush>
                        <StackPanel>
                            <Slider x:Name="DurationSlider"
                                    Minimum="1"
                                    Maximum="24"
                                    Value="2"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    Margin="0,0,0,4"
                                    ValueChanged="DurationSlider_ValueChanged"/>

                            <!-- Endpoint labels -->
                            <Grid Margin="0,0,0,12">
                                <TextBlock Text="1 hour (minimum)" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Left"/>
                                <TextBlock Text="24 hours (maximum)" FontSize="11" Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Right"/>
                            </Grid>
                            
                            <TextBlock x:Name="DurationDisplay" 
                                       Text="Expires in 2 hours" 
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            
                            <TextBlock x:Name="DurationRecommendation" 
                                       Text="✓ Good for quick testing (2-4 hours recommended)" 
                                       FontSize="13"
                                       Foreground="Green"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,24"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="← Back" 
                                        Click="BackToStep2_Click"
                                        Margin="0,0,8,0"
                                        Background="Transparent"
                                        Foreground="{StaticResource TextSecondary}"
                                        BorderBrush="{StaticResource BorderDefault}"
                                        BorderThickness="1"
                                        Padding="20,10"
                                        Cursor="Hand"/>
                                <Button Content="Next: Enable Logging →" 
                                        Click="NextToStep4_Click"
                                        Background="{StaticResource AccentPrimary}"
                                        Foreground="White"
                                        Padding="24,12"
                                        FontWeight="SemiBold"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Step 4: Enable & Download -->
                <StackPanel x:Name="Step4Panel" Visibility="Collapsed">
                    <TextBlock Text="Step 4 of 4" FontSize="12" Foreground="{StaticResource TextSecondary}" Margin="0,0,0,4"/>
                    <TextBlock Text="Step 4: Ready to Enable Debug Logging!" FontSize="24" FontWeight="Bold" Margin="0,0,0,16"/>
                    
                    <Border Padding="24" Margin="0,0,0,16" Background="{StaticResource BgSecondary}" CornerRadius="12" BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="White" Opacity="0.1"/>
                        </Border.BorderBrush>
                        <StackPanel>
                            <TextBlock Text="Summary:" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,12" Foreground="{StaticResource TextPrimary}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="User:" FontWeight="SemiBold" Margin="0,4" Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="SummaryUser" Text="Current User" Margin="8,4" Foreground="{StaticResource TextSecondary}"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Detail Level:" FontWeight="SemiBold" Margin="0,4" Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="SummaryLevel" Text="Standard" Margin="8,4" Foreground="{StaticResource TextSecondary}"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Duration:" FontWeight="SemiBold" Margin="0,4" Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="SummaryDuration" Text="2 hours" Margin="8,4" Foreground="{StaticResource TextSecondary}"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Padding="24" Margin="0,0,0,16" Background="{StaticResource BgSecondary}" BorderBrush="{StaticResource AccentPrimary}" BorderThickness="2" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="What Happens Next?" FontWeight="SemiBold" Margin="0,0,0,12" Foreground="{StaticResource TextPrimary}"/>
                            <StackPanel Margin="16,0,0,0">
                                <TextBlock Text="1. We'll enable debug logging with your settings" Margin="0,4" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="2. Have the user perform the action you want to troubleshoot" Margin="0,4" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="3. Come back here to download and analyze the logs" Margin="0,4" Foreground="{StaticResource TextSecondary}"/>
                                <TextBlock Text="4. Get plain-English explanations of what happened!" Margin="0,4" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- What will the log look like? -->
                    <Border Padding="16" Margin="0,0,0,16" Background="{StaticResource BgSecondary}" CornerRadius="8" BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="White" Opacity="0.1"/>
                        </Border.BorderBrush>
                        <StackPanel>
                            <TextBlock Text="What will I see in the log?" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,8" Foreground="{StaticResource TextPrimary}"/>
                            <Border Background="{StaticResource BgTertiary}" CornerRadius="4" Padding="10,8">
                                <TextBlock FontFamily="Consolas, Courier New" FontSize="11" Foreground="{StaticResource TextSecondary}" TextWrapping="Wrap">
17:34:10.123 (1234567)|SOQL_EXECUTE_BEGIN|[23]|SELECT Id,Name FROM Account WHERE ...&#x0A;17:34:10.145 (2345678)|SOQL_EXECUTE_END|[23]|Rows:5&#x0A;17:34:10.200 (3456789)|DML_BEGIN|[45]|Op:Update|Type:Account|Rows:5&#x0A;17:34:10.350 (4567890)|DML_END|[45]&#x0A;17:34:11.500 (9999999)|CUMULATIVE_LIMIT_USAGE|SOQL:3/100|DML:1/150|CPU:450/10000</TextBlock>
                            </Border>
                            <TextBlock Text="Black Widow will parse this automatically and explain it in plain English." FontSize="11" Foreground="{StaticResource TextSecondary}" Margin="0,6,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Border Padding="24" Background="{StaticResource BgSecondary}" CornerRadius="12" BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="White" Opacity="0.1"/>
                        </Border.BorderBrush>
                        <StackPanel>
                            <Button x:Name="EnableButton" 
                                    Content="🚀 Enable Debug Logging" 
                                    FontSize="16"
                                    Height="48"
                                    Click="EnableLogging_Click"
                                    Margin="0,0,0,16"
                                    Background="{StaticResource AccentPrimary}"
                                    Foreground="White"
                                    Padding="24,12"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Cursor="Hand"/>

                            <ProgressBar x:Name="EnableProgressBar" 
                                         IsIndeterminate="True" 
                                         Visibility="Collapsed"
                                         Margin="0,0,0,8"/>
                            
                            <TextBlock x:Name="StatusText" 
                                       Text="" 
                                       TextAlignment="Center"
                                       Visibility="Collapsed"
                                       Foreground="{StaticResource TextPrimary}"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                                <Button Content="← Back" 
                                        Click="BackToStep3_Click"
                                        Margin="0,0,8,0"
                                        Background="Transparent"
                                        Foreground="{StaticResource TextSecondary}"
                                        BorderBrush="{StaticResource BorderDefault}"
                                        BorderThickness="1"
                                        Padding="20,10"
                                        Cursor="Hand"/>
                                <Button Content="View Active Logs" 
                                        x:Name="ViewLogsButton"
                                        Visibility="Collapsed"
                                        Click="ViewLogs_Click"
                                        Background="{StaticResource AccentPrimary}"
                                        Foreground="White"
                                        Padding="24,12"
                                        FontWeight="SemiBold"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
