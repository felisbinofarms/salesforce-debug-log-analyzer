<Window x:Class="SalesforceDebugAnalyzer.Views.StreamingOptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ•·ï¸ Configure Log Streaming" 
        Height="520" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgSecondary}"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="SubHeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>
    </Window.Resources>
    
    <Border BorderBrush="{StaticResource BorderSubtle}" BorderThickness="1">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Style="{StaticResource HeaderText}">
                    Configure Live Streaming
                </TextBlock>
                <TextBlock Foreground="{StaticResource TextSecondary}" FontSize="12">
                    Choose what logs to watch. More filters = less "drinking from the fire hose" ðŸ”¥
                </TextBlock>
            </StackPanel>
            
            <!-- User Filter -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Style="{StaticResource SubHeaderText}">
                    ðŸ‘¤ Filter by User
                </TextBlock>
                <CheckBox x:Name="FilterByUserCheckBox" 
                          Content="Only show logs from specific user"
                          Checked="FilterByUserCheckBox_CheckedChanged"
                          Unchecked="FilterByUserCheckBox_CheckedChanged"/>
                
                <Grid Margin="0,10,0,0" IsEnabled="{Binding ElementName=FilterByUserCheckBox, Path=IsChecked}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Username:" 
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="0,0,10,0"/>
                    
                    <TextBox x:Name="UsernameTextBox"
                             Grid.Column="1"
                             Height="32"
                             Background="{StaticResource BgInput}"
                             Foreground="White"
                             BorderBrush="{StaticResource BorderDefault}"
                             BorderThickness="1"
                             Padding="8,6"
                             FontSize="13"
                             VerticalContentAlignment="Center"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                
                <TextBlock Margin="24,5,0,0" 
                           FontSize="11" 
                           Foreground="{StaticResource TextMuted}"
                           Text="ðŸ’¡ Tip: Set up trace flags for this user in Salesforce first"
                           Visibility="{Binding ElementName=FilterByUserCheckBox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
            
            <!-- Operation Type Filter -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Style="{StaticResource SubHeaderText}">
                        ðŸŽ¯ Filter by Operation Type
                    </TextBlock>
                    <TextBlock Margin="0,0,0,10" FontSize="11" Foreground="{StaticResource TextMuted}">
                        Uncheck types you don't want to see
                    </TextBlock>
                    
                    <CheckBox x:Name="IncludeApexCheckBox" Content="Apex Triggers &amp; Classes" IsChecked="True"/>
                    <CheckBox x:Name="IncludeFlowsCheckBox" Content="Flows &amp; Process Builders" IsChecked="True"/>
                    <CheckBox x:Name="IncludeValidationCheckBox" Content="Validation Rules" IsChecked="True"/>
                    <CheckBox x:Name="IncludeLightningCheckBox" Content="Lightning Components (Aura/LWC)" IsChecked="True"/>
                    <CheckBox x:Name="IncludeApiCheckBox" Content="REST/SOAP API Calls" IsChecked="True"/>
                    <CheckBox x:Name="IncludeBatchCheckBox" Content="Batch/Scheduled/Queueable" IsChecked="True"/>
                    
                    <TextBlock Style="{StaticResource SubHeaderText}" Margin="0,20,0,8">
                        âš¡ Performance Options
                    </TextBlock>
                    
                    <CheckBox x:Name="OnlyErrorsCheckBox" 
                              Content="Only show logs with errors/failures"
                              ToolTip="Hide successful logs (less noise)"/>
                    
                    <CheckBox x:Name="SkipSlowLogsCheckBox" 
                              Content="Skip logs > 10 seconds (prevents parsing lag)"
                              ToolTip="Very slow logs can freeze UI during parsing"/>
                    
                    <CheckBox x:Name="AutoSwitchCheckBox" 
                              Content="Auto-switch to newest log"
                              IsChecked="False"
                              ToolTip="When disabled, you can read current log without interruption"/>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Buttons -->
            <Grid Grid.Row="3" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           VerticalAlignment="Center"
                           FontSize="11"
                           Foreground="{StaticResource TextMuted}"
                           Text="Streaming checks for new logs every 3 seconds"/>
                
                <Button Grid.Column="1"
                        Content="Cancel"
                        Width="90"
                        Height="36"
                        Background="{StaticResource BgInput}"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="Medium"
                        Margin="0,0,10,0"
                        Click="CancelButton_Click"
                        Cursor="Hand"/>
                
                <Button Grid.Column="2"
                        Content="ðŸš€ Start Streaming"
                        Width="140"
                        Height="36"
                        Background="{StaticResource AccentPrimary}"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Click="StartButton_Click"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource AccentHover}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
