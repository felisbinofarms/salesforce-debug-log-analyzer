<Window x:Class="SalesforceDebugAnalyzer.Views.TraceFlagDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Manage Debug Logs" 
        Height="600" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Debug Log Configuration" FontSize="24" FontWeight="Bold" Margin="0,0,0,8"/>
            <TextBlock Text="Set trace flags to enable debug logging for your user" 
                       FontSize="14" 
                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
        </StackPanel>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="0,0,0,16">
            <!-- Create Trace Flag Tab -->
            <TabItem Header="Enable Debug Log">
                <ScrollViewer>
                    <StackPanel Margin="16">
                        <TextBlock Text="Configure Debug Logging" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,16"/>
                        
                        <!-- Current User Info -->
                        <Border Background="{DynamicResource MaterialDesignDivider}" 
                                Padding="12" 
                                Margin="0,0,0,16" 
                                CornerRadius="4">
                            <StackPanel>
                                <TextBlock Text="Current User" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBlock x:Name="CurrentUserTextBlock" 
                                          Text="Loading user info..." 
                                          Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </StackPanel>
                        </Border>

                        <!-- Debug Level Selection -->
                        <TextBlock Text="Debug Level" Margin="0,0,0,8"/>
                        <ComboBox x:Name="DebugLevelComboBox" 
                                  DisplayMemberPath="MasterLabel"
                                  Margin="0,0,0,16"/>
                        
                        <Button Content="Create New Debug Level" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Click="CreateDebugLevelButton_Click"
                                Margin="0,0,0,16"/>

                        <!-- Duration -->
                        <TextBlock Text="Duration (hours)" Margin="0,0,0,8"/>
                        <Slider x:Name="DurationSlider" 
                                Minimum="1" 
                                Maximum="24" 
                                Value="2" 
                                TickFrequency="1" 
                                IsSnapToTickEnabled="True"
                                Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding Value, ElementName=DurationSlider, StringFormat='Expires in {0} hours'}" 
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="0,0,0,16"/>

                        <!-- Action Button -->
                        <Button x:Name="EnableLoggingButton" 
                                Content="Enable Debug Logging" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Click="EnableLoggingButton_Click"
                                HorizontalAlignment="Left"
                                Margin="0,8,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Active Trace Flags Tab -->
            <TabItem Header="Active Trace Flags">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,8">
                        <Button Content="Refresh" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Click="RefreshTraceFlagsButton_Click"
                                HorizontalAlignment="Left"/>
                    </StackPanel>

                    <DataGrid x:Name="TraceFlagsDataGrid" 
                              Grid.Row="1"
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Margin="0,8,0,8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="User/Entity" Binding="{Binding TracedEntityId}" Width="120"/>
                            <DataGridTextColumn Header="Debug Level" Binding="{Binding DebugLevelId}" Width="120"/>
                            <DataGridTextColumn Header="Expires" Binding="{Binding ExpirationDate, StringFormat='MM/dd HH:mm'}" Width="100"/>
                            <DataGridTextColumn Header="Started" Binding="{Binding StartDate, StringFormat='MM/dd HH:mm'}" Width="100"/>
                            <DataGridTemplateColumn Header="Actions" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete" 
                                                Tag="{Binding Id}"
                                                Style="{StaticResource MaterialDesignFlatButton}"
                                                Click="DeleteTraceFlagButton_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock x:Name="NoTraceFlagsTextBlock" 
                               Grid.Row="1"
                               Text="No active trace flags" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Visibility="Collapsed"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                </Grid>
            </TabItem>

            <!-- Recent Logs Tab -->
            <TabItem Header="Recent Logs">
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <Button Content="Refresh Logs" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Click="RefreshLogsButton_Click"
                                Margin="0,0,8,0"/>
                        <Button Content="Download Selected" 
                                x:Name="DownloadLogButton"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Click="DownloadLogButton_Click"/>
                    </StackPanel>

                    <DataGrid x:Name="LogsDataGrid" 
                              Grid.Row="1"
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Operation" Binding="{Binding Operation}" Width="150"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                            <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime, StringFormat='MM/dd HH:mm:ss'}" Width="120"/>
                            <DataGridTextColumn Header="Duration (ms)" Binding="{Binding DurationMilliseconds}" Width="100"/>
                            <DataGridTextColumn Header="Size (KB)" Binding="{Binding LogLength}" Width="80"/>
                            <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <ProgressBar IsIndeterminate="True" 
                             Width="100" 
                             Height="4"
                             x:Name="LoadingProgressBar"
                             Visibility="Collapsed"
                             Margin="0,0,8,0"
                             VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusTextBlock" 
                           Text="Ready" 
                           VerticalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Column="1" 
                    Content="Close" 
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</Window>
